<div class="c-time-entry__left-side">
  {{one-way-input
      class="c-time-entry-form__input"
      placeholder="What were you doing?"
      value=name
      update=(action (mut name))
      onenter=(perform submitFormTask)
  }}
</div>

<div class="c-time-entry__right-side">
  <button
    class="c-btn c-btn--small c-btn--secondary"
    onclick={{action deleteEntry}}
  >
    Delete
  </button>

  <button
    class="c-btn c-btn--small c-btn--secondary"
    onclick={{action closeForm}}
  >
    Cancel
  </button>

  <button
    class="c-btn c-btn--small c-btn--primary {{if isDisabled 'is-disabled'}}"
    onclick={{perform submitFormTask}}
  >
    Save
  </button>
</div>
