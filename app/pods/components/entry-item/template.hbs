{{#if isEditing}}
  {{entry-item-form
      timeEntry=timeEntry
      tags=tags
      submitForm=updateEntry
      allTags=allTags
      deleteEntry=deleteEntry
      closeForm=(action "stopEditing")
  }}
{{else if timeEntry.isActive}}
  {{entry-item-active
      timeEntry=timeEntry
      stopEntry=stopEntry
  }}
{{else}}
  {{entry-item-ended
      timeEntry=timeEntry
      restartEntry=restartEntry
  }}
{{/if}}