{{#if isEditing}}
  {{entry-item-form
      timeEntry=timeEntry
      allTags=allTags
      submitForm=updateEntry
      allTags=allTags
      destroyEntry=(action destroyEntry)
      closeForm=(action "stopEditing")
  }}
{{else if timeEntry.isActive}}
  {{entry-item-active
      timeEntry=timeEntry
      stopEntry=(action stopEntry)
  }}
{{else}}
  {{entry-item-ended
      timeEntry=timeEntry
      restartEntry=(action restartEntry)
  }}
{{/if}}