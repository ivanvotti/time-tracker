<div class="c-timer-form">
  {{one-way-input
      class="c-timer-form__input"
      placeholder="What are you doing?"
      value=entryName
      update=(action (mut entryName))
      onenter=(action "submitForm")
  }}

  <button
    class="c-timer-form__button {{if submitFormTask.isRunning 'is-busy'}}"
    {{action "submitForm"}}
  >
    Start
  </button>
</div>