{{title timeEntry.name}}
{{title durationDisplay}}

<div class="c-time-entry c-time-entry--active">
  <div class="c-time-entry__left-side">
    <div class="c-time-entry__name">
      {{timeEntry.name}}
    </div>

    {{#each timeEntry.tags as |tag|}}
      <div class="c-time-entry__tag">
        {{tag.name}}
      </div>
    {{/each}}
  </div>

  <div class="c-time-entry__right-side">
    <div class="c-time-entry__time">
      {{timeEntry.startedEndedDisplay}}
    </div>

    <div class="c-time-entry__duration">
      {{durationDisplay}}
    </div>

    <button
      class="c-time-entry__button"
      title="Stop timer"
      onclick={{action stopEntry}}
    >
      <svg class="c-svg-icon"><use xlink:href="#icon-stop"></use></svg>
    </button>
  </div>
</div>